{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "https://videoappserver-gj5a.onrender.com/api/$1"
    },
    {
      "source": "/(.*)", 
      "destination": "/index.html"
    }
  ]
}
